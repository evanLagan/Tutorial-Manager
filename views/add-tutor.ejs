<!DOCTYPE html>
<html>
  <head>
    <title>Add New</title>
  </head>
  <body>
    <h1>Add New Personal Detail</h1>

    <form action="/add" method="post">
      <label for="title">Title:</label>
      <select name="title">
        <option value="Mx">Mx</option>
        <option value="Ms">Ms</option>
        <option value="Mr">Mr</option>
        <option value="Mrs">Mrs</option>
        <option value="Miss">Miss</option>
        <option value="Other">Other</option>
      </select><br>

      <label for="other_title">Other Title:</label>
      <input type="text" name="other_title"><br>

      <label for="first_name">First Name:</label>
      <input type="text" name="first_name" required><br>

      <label for="surname">Surname:</label>
      <input type="text" name="surname" required><br>

      <label for="phone_number">Phone Number:</label>
      <input type="text" name="phone_number" required><br>

      <label for="email_address">Email Address:</label>
      <input type="email" name="email_address" required><br>

      <label for="address_line_1">Address Line 1:</label>
      <input type="text" name="address_line_1" required><br>

      <label for="address_line_2">Address Line 2:</label>
      <input type="text" name="address_line_2"><br>

      <label for="town">Town:</label>
      <input type="text" name="town" required><br>

      <label for="county_city">County/City:</label>
      <input type="text" name="county_city" required><br>

      <label for="eircode">Eircode:</label>
      <input type="text" name="eircode" required><br>

      <input type="submit" value="Add">
    </form>
  </body>
</html>