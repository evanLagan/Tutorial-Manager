<!DOCTYPE html>
<html>
  <head>
    <title>Edit</title>
  </head>
  <body>
    <h1>Edit Personal Detail</h1>

    <form action="/edit-tutor/<%= tutorData.id %>" method="post">
      <label for="title">Title:</label>
      <select name="title">
        <option value="Mx" <%= tutorData.title === 'Mx' ? 'selected' : '' %>>Mx</option>
        <option value="Ms" <%= tutorData.title === 'Ms' ? 'selected' : '' %>>Ms</option>
        <option value="Mr" <%= tutorData.title === 'Mr' ? 'selected' : '' %>>Mr</option>
        <option value="Mrs" <%= tutorData.title === 'Mrs' ? 'selected' : '' %>>Mrs</option>
        <option value="Miss" <%= tutorData.title === 'Miss' ? 'selected' : '' %>>Miss</option>
        <option value="Other" <%= tutorData.title === 'Other' ? 'selected' : '' %>>Other</option>
      </select><br>

      <label for="other_title">Other Title:</label>
      <input type="text" name="other_title" value="<%= tutorData.other_title %>"><br>

      <label for="first_name">First Name:</label>
      <input type="text" name="first_name" value="<%= tutorData.first_name %>" required><br>

      <label for="surname">Surname:</label>
      <input type="text" name="surname" value="<%= tutorData.surname %>" required><br>

      <label for="phone_number">Phone Number:</label>
      <input type="text" name="phone_number" value="<%= tutorData.phone_number %>" required><br>

      <label for="email_address">Email Address:</label>
      <input type="email" name="email_address" value="<%= tutorData.email_address %>" required><br>

      <label for="address_line_1">Address Line 1:</label>
      <input type="text" name="address_line_1" value="<%= tutorData.address_line_1 %>" required><br>

      <label for="address_line_2">Address Line 2:</label>
      <input type="text" name="address_line_2" value="<%= tutorData.address_line_2 %>"><br>

      <label for="town">Town:</label>
      <input type="text" name="town" value="<%= tutorData.town %>" required><br>

      <label for="county_city">County/City:</label>
      <input type="text" name="county_city" value="<%= tutorData.county_city %>" required><br>

      <label for="eircode">Eircode:</label>
      <input type="text" name="eircode" value="<%= tutorData.eircode %>" required><br>

      <input type="submit" value="Save">
    </form>
  </body>
</html>