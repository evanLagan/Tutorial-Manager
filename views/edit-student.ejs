<!DOCTYPE html>
<html>
  <head>
    <title>Edit Student Personal Detail</title>
  </head>
  <body>
    <h1>Edit Student Personal Detail</h1>
    <form action="/edit-student/<%= studentData.id %>" method="post">
      <!-- Student personal details fields -->
      <label for="title">Title:</label>
      <select name="title">
        <option value="Mx" <%= studentData.title === 'Mx' ? 'selected' : '' %>>Mx</option>
        <option value="Ms" <%= studentData.title === 'Ms' ? 'selected' : '' %>>Ms</option>
        <option value="Mr" <%= studentData.title === 'Mr' ? 'selected' : '' %>>Mr</option>
        <option value="Mrs" <%= studentData.title === 'Mrs' ? 'selected' : '' %>>Mrs</option>
        <option value="Miss" <%= studentData.title === 'Miss' ? 'selected' : '' %>>Miss</option>
        <option value="Other" <%= studentData.title === 'Other' ? 'selected' : '' %>>Other</option>
      </select><br>

      <label for="other_title">Other Title:</label>
      <input type="text" name="other_title" value="<%= studentData.other_title %>"><br>

      <label for="first_name">First Name:</label>
      <input type="text" name="first_name" value="<%= studentData.first_name %>" required><br>

      <label for="surname">Surname:</label>
      <input type="text" name="surname" value="<%= studentData.surname %>" required><br>

      <label for="phone_number">Phone Number:</label>
      <input type="text" name="phone_number" value="<%= studentData.phone_number %>" required><br>

      <label for="email_address">Email Address:</label>
      <input type="email" name="email_address" value="<%= studentData.email_address %>" required><br>

      <label for="address_line_1">Address Line 1:</label>
      <input type="text" name="address_line_1" value="<%= studentData.address_line_1 %>" required><br>

      <label for="address_line_2">Address Line 2:</label>
      <input type="text" name="address_line_2" value="<%= studentData.address_line_2 %>"><br>

      <label for="town">Town:</label>
      <input type="text" name="town" value="<%= studentData.town %>" required><br>

      <label for="county_city">County/City:</label>
      <input type="text" name="county_city" value="<%= studentData.county_city %>" required><br>

      <label for="eircode">Eircode:</label>
      <input type="text" name="eircode" value="<%= studentData.eircode %>" required><br>

      <label for="date_of_birth">Date of Birth:</label>
      <input type="date" name="date_of_birth" value="<%= studentData.date_of_birth %>" required><br>

      <label for="parent_guardian_name">Parent/Guardian Name:</label>
      <input type="text" name="parent_guardian_name" value="<%= studentData.parent_guardian_name %>"><br>

      <label for="attend_tutorial_virtually">Attend Tutorial Virtually:</label>
      <select name="attend_tutorial_virtually">
        <option value="Y" <%= studentData.attend_tutorial_virtually === 'Y' ? 'selected' : '' %>>Yes</option>
        <option value="N" <%= studentData.attend_tutorial_virtually === 'N' ? 'selected' : '' %>>No</option>
      </select><br>

      <label for="gender">Gender:</label>
      <select name="gender">
        <option value="Male" <%= studentData.gender === 'Male' ? 'selected' : '' %>>Male</option>
        <option value="Female" <%= studentData.gender === 'Female' ? 'selected' : '' %>>Female</option>
        <option value="Other" <%= studentData.gender === 'Other' ? 'selected' : '' %>>Other</option>
      </select><br>

      <label for="subject">Subject:</label>
      <input type="text" name="subject" value="<%= studentData.subject %>" required><br>

      <input type="submit" value="Save">
    </form>
  </body>
</html>